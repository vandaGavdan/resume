<main>
    <div class="card">
        <nav class="nav">
            {{#with navigation}}
            {{#each links}}
            <a class="nav-link" href="{{href}}">{{text}}</a>
            {{/each}}
            {{/with}}
            <a class="nav-link disabled" href="#">Disabled</a>
        </nav>
    </div>
    <br>
    <hr>
    <diV>
        {{#with newsBlock}}
        <h1>{{title}}</h1>
        <div class="row">
            {{#each cards}}
            <div class="col-4 my-3">
                <div class="card text-bd-light">
                    <div class="card-header text-bg-dark">
                        {{title}}
                        {{#if isTop}}
                        <span class="badge text-bg-success rounded-pill text-capitalize">
                            Top
                        </span>
                        {{/if}}

                        {{#if isNew}}
                        <span class="badge text-bg-danger rounded-pill text-capitalize">
                            Нове
                        </span>
                        {{/if}}
                    </div>

                    <div class="card-body text-bg-dark text-center">
                        <p class="card-title">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </diV>
    <br>
    <hr>
    <div class="card">
        <nav class="nav nav-table">
            {{#with goodsBlock}}
            {{#each tabs}}
            {{#if isActive}}
            <a class="nav-link active" href="#">{{text}}</a>
            {{/if}}

            {{#if isDisabled}}
            <a class="nav-link active" href="#">{{text}}</a>
            {{/if}}
            {{#if isDisabled}}
            <a class="nav-link" href="#">{{text}}</a>
            {{/if}}

            {{#if isActive}}
            <a class="nav-link" href="#">{{text}}</a>
            {{/if}}

            {{/each}}
            <br>
            <hr>

            <div class="row">
                {{#each cards}}
                <div class="col-4 my-3">
                    <div class="card text-bd-light">
                        <div class="card-header text-bg-light">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-success rounded-pill text-capitalize">
                                Hot
                            </span>
                            {{/if}}

                            {{#if isNew}}
                            <span class="badge text-bg-danger rounded-pill text-capitalize">
                                Нове
                            </span>
                            {{/if}}
                        </div>

                        <div class="card-body text-bg-light text-center">
                            <p class="card-title">{{description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </nav>
    </div>
    <br>
    <hr>
    <div class="rov">
        <div class="col-12">
            {{#with subscribe}}
            <div class="card text-bg-dark text-light">
                <h2>{{header}}</h2>
                <p>{{description}}</p>

                <div class="card-body">
                    {{#each buttons}}
                    <button href="{{link}}" class="btn btn-primary">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    <br>
    <hr>
    <div class="rov">
        <div class="col-12">
            {{#with service}}
            <div class="card text-bg-success text-center">
                <h2>{{title}}</h2>
                <p>{{description}}</p>

                <div class="card-body">
                    {{#each buttons}}
                    <button href="{{link}}" class="btn btn-primary">{{text}}</button>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    <br>
    <hr>


    {{#each footer}}
    <div class="row">
        {{#each this}}
        <div class="col-3 my-4">
            <p>
                <a href="{{link}}" class="text-info"> {{text}}</a>
            </p>
            <br>
        </div>
        {{/each}}
    </div>
    {{/each}}
</main>